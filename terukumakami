title.Size, title.Position = UDim2.new(1, 0, 0, 30), UDim2.new(0, 0, 0, 2)
title.Text, title.Font, title.TextSize, title.BackgroundTransparency = "ã¦ã‚‹ã‚¯ãƒ v8.1", 1, 18, 1
title.ZIndex = 51
