local P = game:GetService("Players").LocalPlayer
local PlayerGui = P:FindFirstChild("PlayerGui") or P:WaitForChild("PlayerGui", 10)
local S = game:GetService("RunService")
local UIS = game:GetService("UserInputService")

if PlayerGui:FindFirstChild("TerukumaUltimate") then PlayerGui.TerukumaUltimate:Destroy() end

local d, speedVal, jumpVal, tgt = nil, 0, 50, nil
local conns = {Inf = nil, Clip = nil, Anti = nil}
local activeEntries = {}
_G.TerukumaESP = false

-- GUIå…¨ä½“
local g = Instance.new("ScreenGui", PlayerGui)
g.Name, g.ResetOnSpawn, g.IgnoreGuiInset, g.DisplayOrder = "TerukumaUltimate", false, true, 9999999

-- --- ğŸŒŸ ã€å®Œç’§ç‰ˆã€‘é€šçŸ¥æ©Ÿèƒ½ (ã”æç¤ºã„ãŸã ã„ãŸã‚³ãƒ¼ãƒ‰ã‹ã‚‰ç§»æ¤) ---
local function showNotify(player)
    task.spawn(function()
        local nf = Instance.new("Frame", g)
        nf.Size, nf.Position = UDim2.new(0, 250, 0, 50), UDim2.new(1, 10, 0.1, 0)
        nf.BackgroundColor3, nf.BackgroundTransparency = Color3.fromRGB(40, 40, 40), 0.3
        Instance.new("UICorner", nf)
        
        local img = Instance.new("ImageLabel", nf)
        img.Size, img.Position = UDim2.new(0, 40, 0, 40), UDim2.new(0, 5, 0.5, -20)
        img.BackgroundTransparency = 1
        Instance.new("UICorner", img).CornerRadius = UDim.new(1,0)
        
        local txt = Instance.new("TextLabel", nf)
        txt.Size, txt.Position = UDim2.new(1, -55, 1, 0), UDim2.new(0, 50, 0, 0)
        txt.Text = "<b>" .. player.DisplayName .. "</b> (@" .. player.Name .. ")\nã‚µãƒ¼ãƒãƒ¼ã‹ã‚‰é€€å‡ºã—ã¾ã—ãŸ"
        txt.RichText = true
        txt.TextColor3, txt.TextSize, txt.Font, txt.BackgroundTransparency = Color3.new(1,1,1), 11, 1, 1
        txt.TextStrokeTransparency = 0.5 -- è¦–èªæ€§å‘ä¸Šã®ãŸã‚è–„ã„å½±ã‚’è¿½åŠ 
        txt.TextXAlignment = Enum.TextXAlignment.Left

        -- ã‚¢ã‚¤ã‚³ãƒ³å–å¾— (ã‚¨ãƒ©ãƒ¼å›é¿ã®ãŸã‚pcall)
        pcall(function()
            img.Image = game.Players:GetUserThumbnailAsync(player.UserId, Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size420x420)
        end)

        -- å³ã‹ã‚‰ã‚¹ãƒ©ã‚¤ãƒ‰ã‚¤ãƒ³
        nf:TweenPosition(UDim2.new(1, -260, 0.1, 0), "Out", "Quad", 0.5, true)
        
        task.delay(4, function()
            if nf then
                nf:TweenPosition(UDim2.new(1, 10, 0.1, 0), "In", "Quad", 0.5, true)
                task.wait(0.5)
                nf:Destroy()
            end
        end)
    end)
end

